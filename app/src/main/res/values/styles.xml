<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="round_Image_View">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/purple_500</item>
    </style>

    <style name="ChatShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeBottomLeft">22dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>
    <style name="ChatShapeAppearanceReceived">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">22dp</item>
    </style>


